{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "TimezoneHeader": "X-TimeZone",
  "AccountHeader": "X-Account",
  "AccountTypeCode": {
    "Acme": "SHT-ROT",
    "Partner": "SHT-PRT",
    "Customer": "SHT-CUS"
  },
  "ContractChargeCode": {
    "NcpPcpDiscount": "PcpContractDiscountRate",
    "NcpWorkDiscount": "WorksContractDiscountRate",
    "MspCharge": "MspChargeRate"
  },
  "ProductCode": {
    "NcpConsumption": "PDC-NCP",
    "NcpPcp": "PDC-NPD",
    "NcpWorks": "PDC-NWD",
    "NcpManagedService": "PDC-NMS",
    "Cutoff100": "PDC-004"
  },
  "BillStatusCode": {
    "Certain": "BST-EXT",
    "Uncertain": "BST-001"
  },
  "CloudVenderCode": {
    "NCP": "VEN-NCP",
    "Azure": "VEN-AZT",
    "AWS": "VEN-AWS",
    "GC": "VEN-GCP"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Debug" ],
    //"MinimumLevel": "Information"
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore.Hosting": "Warning",
        "Microsoft.AspNetCore.Mvc": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  }
}
